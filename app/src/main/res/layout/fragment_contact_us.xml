<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUsFragment">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/callUs_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:background="#F8F3F3"
        android:layout_marginHorizontal="12dp"
        >

        <ImageView
            android:id="@+id/callUs_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/contact_phone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+91 7777974911"
            android:padding="20dp"
            android:textStyle="italic"
            android:textColor="@color/teal_700"
            android:layout_toRightOf="@id/callUs_icon"
            android:textSize="18sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emailUs_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:background="#F8F3F3"
        android:layout_marginHorizontal="12dp"
        >

        <ImageView
            android:id="@+id/emailUs_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/contact_email"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aaftabvhora62@gmail.com "
            android:padding="20dp"
            android:textStyle="italic"
            android:textColor="@color/teal_700"
            android:layout_toRightOf="@id/emailUs_icon"
            android:textSize="18sp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:layout_margin="50dp"
        android:src="@drawable/rental_hub_logo_png"
        />

</LinearLayout>
</FrameLayout>