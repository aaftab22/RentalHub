<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bottomnavigationview.MainActivity">

    <FrameLayout
        android:id="@+id/framelayout_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bnv_id" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1566E0"
        app:itemIconTint="#EEF4ED"
        app:itemTextColor="@color/white"
        app:menu="@menu/menufile" />

</RelativeLayout>