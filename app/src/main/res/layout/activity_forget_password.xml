<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".registration.forgetPasswordActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:textColor="#1ea5ff"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/forget_password_image"
       />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/blue_border_rounded_cornwe"
     >

        <EditText
            android:id="@+id/forget_password_email_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/username_icon"
            android:background="@android:color/transparent"
            android:hint="@string/email"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/username_icon"
            android:layout_width="15.7dp"
            android:layout_height="15.3dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/email" />

    </RelativeLayout>
    <TextView
        android:id="@+id/confimation_msg_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_email_sent"
        android:textColor="#8BC34A"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/reset_password_btn_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/blue_fill__rounded_color"
        android:padding="10dp"
        android:text="@string/reset_password"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl1"
        tools:layout_editor_absoluteX="16dp" />


</LinearLayout>