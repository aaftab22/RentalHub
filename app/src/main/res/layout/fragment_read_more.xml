<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReadMoreFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F8F3F3"
        android:layout_marginHorizontal="12dp"
        >
        <TextView
            android:id="@+id/aboutUsTitle_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:padding="20dp"
            android:textStyle="italic"
            android:textColor="@color/teal_700"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/rateUs_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate Us"
            android:padding="20dp"
            android:textStyle="italic"
            android:textColor="@color/teal_700"
            android:layout_below="@id/aboutUsTitle_ID"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/faq_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:padding="20dp"
            android:textStyle="italic"
            android:textColor="@color/teal_700"
            android:layout_below="@id/rateUs_ID"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/terms_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_condition"
            android:padding="20dp"
            android:textStyle="italic"
            android:textColor="@color/teal_700"
            android:layout_below="@id/faq_ID"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/privacyPolicy_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:padding="20dp"
            android:textStyle="italic"
            android:textColor="@color/teal_700"
            android:layout_below="@id/terms_ID"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/returns_refund"
            android:padding="20dp"
            android:textStyle="italic"
            android:textColor="@color/teal_700"
            android:layout_below="@id/privacyPolicy_ID"
            android:textSize="18sp"/>


    </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/rental_hub_logo_png"
        android:layout_below="@id/privacyPolicy_ID"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        />
</LinearLayout>